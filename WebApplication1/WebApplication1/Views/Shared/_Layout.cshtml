<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/Style.css" rel="stylesheet" />
    <script src="~/Content/js/scripts.js"></script> 

</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("AboutCompany", "Home")">
                    <img alt="Brand" src="~/Content/img/logo.png">
                </a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("AboutCompany", "Home")">О компании</a></li>
                    @if (@User.Identity.IsAuthenticated)
                    {
                        <li>
                            @Html.ActionLink("Привет" + User.Identity.Name + "!", "Profile", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
                        </li>
                        <li>
                            <a href="@Url.Action("Logout", "Account")"><span class="glyphicon glyphicon-log-out"></span> Выйти</a>
                        </li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("Register", "Account")"> Регистрация</a></li>
                        <li><a href="@Url.Action("Login", "Account")"><span class="glyphicon glyphicon-log-in"></span> Вход</a></li>
                    }
                </ul>
            </div>
        </div>
        </nav>
            
    <div class="container body-content">
        <div class="maincontent">
            @RenderBody()
            @RenderSection("scripts", required: false)

            <footer class="navbar-default text-center">
                <div class="container-fluid">
                    <span>Copyright @@ 2017 iTechArt</span>
                </div>
            </footer>
        </div>
    </div>
</body>
</html>



