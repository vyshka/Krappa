
@{
    ViewBag.Title = "О компании";
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
@section css {
    <link href="@Url.Content("~/Content/css/tab.css")" rel="stylesheet" />
}
<div class="jumbotron">
    <h1 class="display-3">iTechArt Group</h1>
    <p class="lead">iTechArt Group — это команда Remarkable People, профессионалов в сфере разработки, тестирования, сервисной поддержки программных продуктов, модернизации и интеграции бизнес-приложений.
                    Мы страстно любим то, чем занимаемся, и стремимся к совершенству в решении любых задач!</p>
    <hr class="my-4">
    <p>Наша команда — более 700 высококлассных специалистов.</p>
    <p class="lead">
        <a class="btn btn-primary btn-lg ourSite" target="_blank" href="https://www.itechart.com/" role="button">Наш сайт</a>
    </p>
</div>

<input id="tab1" type="radio" name="tabs" checked>
<label for="tab1">О нас</label>

<input id="tab2" type="radio" name="tabs">
<label for="tab2">Вакансии</label>

<input id="tab3" type="radio" name="tabs">
<label for="tab3">Релокация в Минск</label>

<input id="tab4" type="radio" name="tabs">
<label for="tab4">Наши приемущества</label>

<section id="content1">
    @Html.Partial("AboutUs")
</section>

<section id="content2">
    @Html.Partial("VacancyList")
</section>

<section id="content3">
    @Html.Partial("Relo")
</section>

<section id="content4">
    @Html.Partial("Advans")
</section>


