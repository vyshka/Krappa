<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/Style.css" rel="stylesheet" />
    <script src="~/Content/js/scripts.js"></script> 
    @RenderSection("css", false)

</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("AboutCompany", "Home")">
                    <img alt="Brand" src="~/Content/img/logo.png">
                </a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("AboutCompany", "Home")">О компании</a></li>
                    @if (@User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <a href*="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@User.Identity.Name <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="@Url.Action("Profile", "account")"><i class="glyphicon glyphicon-user"></i> Профиль</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Logout", "Account")"><span class="glyphicon glyphicon-log-out"></span> Выйти</a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("Register", "Account")"> Регистрация</a></li>
                        <li><a href="@Url.Action("Login", "Account")"><span class="glyphicon glyphicon-log-in"></span> Вход</a></li>
                    }
                </ul>
            </div>
        </div>
        </nav>
            
    <div class="container body-content">
        <div class="maincontent">
            @RenderBody()
            @RenderSection("scripts", required: false)
        </div>
        <div class="hFooter"></div>
    </div>
    <div class="footer">
        Copyright @@ 2017 iTechArt
    </div>
</body>
</html>



