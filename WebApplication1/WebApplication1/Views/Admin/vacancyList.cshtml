@model PagedList.IPagedList<WebApplication1.Models.Vacancies>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Список вакансий";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Content/js/spin.min.js"></script> 
<script src="~/Content/js/react/react.js"></script> 
<script src="~/Content/js/react/react-dom.js"></script> 
<script src="//cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.23/browser.min.js"></script>

<script type="text/babel" src="~/Content/js/vacancy-list.js" ></script> 

<div class="row search">
    <form>
        <input id="searchString" class="form-control" placeholder="Поиск">
    </form>
</div>


<br />
<div class="panel panel-default panel-table">
    <div class="panel-body">
        <table class="table table-striped table-bordered table-list">
            <thead>
                <tr>
                    <th>@Html.ActionLink("Имя", "VacancyList", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })</th>
                    <th>Url</th>
                    <th class="hidden-xs hidden-sm">@Html.ActionLink("Город", "VacancyList", new { sortOrder = ViewBag.CitySortParm, currentFilter = ViewBag.CurrentFilter })</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody id="table"></tbody>
        </table>
    </div>
</div>
<br />

<div class="row">
    <div class="col-md-8">
        <h3>Добавить вакансию</h3>
            <form class="form-horizontal">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="col-md-2 control-label">Название</label>
                    <div class="col-md-10">
                        <input id="name" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Город</label>
                    <div class="col-md-10">
                        <input id="city" class="form-control">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Url</label>
                    <div class="col-md-10">
                        <input id="url" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="button" id="createBtn" class="btn btn-default">Добавить</button>
                    </div>
                </div>
            </form>
    </div>

</div>