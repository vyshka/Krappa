@model IEnumerable<WebApplication1.Models.Vacancies>
@{
    ViewBag.Title = "Список вакансий";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Scripts
{
    <script src="@Url.Content("~/Scripts/Custom.js")"></script>
}
    <div class="form-group">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th style="text-align: center;">Имя</th>
                    <th style="text-align: center;">Url</th>
                    <th style="text-align: center;">Город</th>
                    <th style="text-align: center;">Редактировать</th>
                    <th style="text-align: center;">Удалить</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align:center">@Html.DisplayFor(modelItem => item.name)</td>
                        <td style="text-align:center">@Html.DisplayFor(modelItem => item.vacancyUrl)</td>
                        <td style="text-align:center">@Html.DisplayFor(modelItem => item.City)</td>
                        <td style="text-align:center"><a href="@Url.Action("EditVacancy", "Admin")/@Html.DisplayFor(modelItem => item.vacancyId)">Редактировать</td>
                        <td style="text-align: center;"><a href="@Url.Action("DeleteVacancy", "Admin")/@Html.DisplayFor(modelItem => item.vacancyId)" onclick="return confirm('Действительно хотите удалить?')">Удалить</a>
                    </tr>
                }
            </tbody>
        </table>
        @Html.ActionLink("Добавить", "CreateVacancy", null,
            new { @class = "btn btn-default" })
    </div>


