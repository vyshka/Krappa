@model IEnumerable<WebApplication1.Models.Vacancies>
@{
    ViewBag.Title = "Список вакансий";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <div class="form-group">
        @using (Html.BeginForm())
        {
            <div class="col-md-4">
                <p>
                    Поиск: @Html.TextBox("SearchString", null, new { @class = "form-control" })
                    <input type="submit" class="btn btn-default" value="Поиск">
                </p>

            </div>
            
        }
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>@Html.ActionLink("Имя", "VacancyList", new { sortOrder = ViewBag.NameSortParm })</th>
                    <th>Url</th>
                    <th>@Html.ActionLink("Город", "VacancyList", new { sortOrder = ViewBag.CitySortParm })</th>
                    <th>Редактировать</th>
                    <th>Удалить</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.name)</td>
                        <td>@Html.DisplayFor(modelItem => item.vacancyUrl)</td>
                        <td>@Html.DisplayFor(modelItem => item.City)</td>
                        <td><a href="@Url.Action("EditVacancy", "Admin")/@Html.DisplayFor(modelItem => item.vacancyId)">Редактировать</a></td>
                        <td><a href="@Url.Action("DeleteVacancy", "Admin")/@Html.DisplayFor(modelItem => item.vacancyId)" onclick="return confirm('Действительно хотите удалить?')">Удалить</a></td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.ActionLink("Добавить", "CreateVacancy", null,
            new { @class = "btn btn-default" })
    </div>


