<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/Style.css" rel="stylesheet" />
    <script src="~/Content/js/scripts.js"></script>
    @*<script src="~/Content/js/jquery-3.1.1.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>*@
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img alt="Brand" src="~/Content/img/logo.png">
                </a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("AboutCompany", "Home")">О компании</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@User.Identity.Name <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="@Url.Action("index", "manage")"><i class="glyphicon glyphicon-user"></i> Профиль</a>
                                </li>
                                <li role="separator" class="divider"></li>
                                <li >
                                    <a href="@Url.Action("Logout", "Account")"><span class="glyphicon glyphicon-log-out"></span> Выйти</a>
                                </li>
                            </ul>
                        </li>
                </ul>
            </div>
            </div>
    </nav>
    <div class="container body-content">
        <div class="col-md-3 col-xs-4">
            <div class="sidebar-nav">
                <div class="well">
                    <ul class="nav nav-list">
                        <li class="nav-header">Меню</li>
                        <li><a href="#"><i class="glyphicon glyphicon-tasks"></i> Мои опросы </a></li>
                        <li><a href="@Url.Action("UsersList", "Admin")"> <i class="glyphicon glyphicon-user"></i> Пользователи</a> </li>
                        <li><a href="@Url.Action("VacancyList", "Admin")"> <i class="glyphicon glyphicon-list"></i> Вакансии</a> </li>
                       
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-9 col-xs-8">
            @RenderBody()
            @RenderSection("scripts", required: false)
            <footer class="navbar-default navbar-fixed-bottom text-center">
                <div class="container-fluid">
                    <span>Copyright @@ 2017 iTechArt</span>
                </div>
            </footer>
        </div>
    </div>
    
</body>
</html>



